<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8fcbde"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.jonathan.firebase.pruebasfirebase.MainActivity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="PUNTOCHAT"
        android:textAlignment="center"
        android:background="@drawable/marcocontacto"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imagenUser"
        android:src="@drawable/iconpersona"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/lblnombre"
        android:text="EJEMPLO"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3799b7"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/lblemail"
        android:text="EJEMPLO"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3799b7"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />


    <Button
     android:layout_width="63dp"
     android:layout_height="65dp"
        android:layout_marginTop="50dp"
     android:onClick="clickMapa"
     style="?android:borderlessButtonStyle"
     android:background="@drawable/botonmap"
        android:layout_gravity="center_horizontal" />
    <Button
        android:id="@+id/btncerrar"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        style="?android:borderlessButtonStyle"
        android:layout_marginTop="25dp"
        android:background="@drawable/botoncerrar"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

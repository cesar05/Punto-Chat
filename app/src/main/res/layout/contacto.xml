<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/listacontactos"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imagenContacto"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/nombreContacto"
        android:layout_marginLeft="5dp"
        android:text="Contacto"
        android:textSize="15sp"
        android:textColor="#7f7f7f"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imagenContacto" />

    <TextView
        android:id="@+id/emailContacto"
        android:text="Contacto"
        android:textSize="12sp"
        android:textColor="#595959"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idContacto"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imagenContacto" />

        <TextView
            android:id="@+id/idContacto"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/urlContacto"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tokenContacto"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</LinearLayout>